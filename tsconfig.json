{
  "compilerOptions": {
    "paths": {
      "@ui/*": ["./src/ui/*"],
      "@module/*": ["./src/module/*"],
      "@assets/*": ["./src/assets/*"],
      "@api/*": ["./src/api/*"],
    },
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
